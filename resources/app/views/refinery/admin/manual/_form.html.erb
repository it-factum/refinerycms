<%= form_for [refinery, :resources_admin, @manual] do |f| -%>
  
  <%= render '/refinery/admin/error_messages',
              :object => @manual,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class="field">
    <% if @manual.send("filename") && !@manual.errors.any? %>
      <%= f.label "attachment".to_sym, @message.send("filename") %>
    <% else %>
      <%= f.label "attachment".to_sym, "Attachment" %>
    <% end %>
    <%= f.file_field "attachment".to_sym %>
    <br />
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
           :continue_editing => false,
           :hide_delete => true -%>

<% end -%>